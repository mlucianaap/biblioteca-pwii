{{#each book}}
<div class="container" id="edit">
	<form action="/home/edit" method='POST'>
		<h1>Edição de Livros</h1>

		<div class="input-box">
			<input name="idbooks" type="hidden" value="{{idbooks}}" required>
			<input name="idusers" type="hidden" value="{{idusers}}" required>
			<input name="title" type="text" placeholder="Título" required value="{{title}}">
			<input name="pages" type="number" placeholder="Quantidade de páginas" required value="{{pages}}">
			<select id="status" name="status" required>
				<option value="{{status}}" selected>{{status}}</option>
				<option value="Já li">Já li</option>
				<option value="Estou lendo">Estou lendo</option>
				<option value="Quero ler">Quero ler</option>
			</select>
			<button type="submit">Editar</button>
		</div>
	</form>
</div>
{{/each}}